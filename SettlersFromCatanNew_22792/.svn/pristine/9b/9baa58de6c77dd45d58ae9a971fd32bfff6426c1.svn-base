package tools;

/**
 * Sets all the available evolution types.
 */
public enum EvolutionType {
    KNIGHT, ROAD_BUILDING, MONOPOLY, YEAR_OF_PLENTY, VICTORY_POINT, HIDDEN;

    public String getFilepath() {
        String fileName = "";
        switch (this) {
            case KNIGHT:
                fileName = "KnightCard";
                break;
            case ROAD_BUILDING:
                fileName = "RoadBuildingCard";
                break;
            case MONOPOLY:
                fileName = "MonopolyCard";
                break;
            case YEAR_OF_PLENTY:
                fileName = "YearOfPlentyCard";
                break;
            case VICTORY_POINT:
                fileName = "VictoryPointCard";
                break;
            case HIDDEN:
                fileName = "HiddenCard";
                break;
            default:
                break;
        }
        return fileName;
    }
}